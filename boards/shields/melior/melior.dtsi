#include "melior-layouts.dtsi"
#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
//             | SW01  | SW02  | SW03  | SW04  | SW05  |  | SW05  | SW04  | SW03  | SW02  | SW01  |
//             | SW06  | SW07  | SW08  | SW09  | SW10  |  | SW10  | SW09  | SW08  | SW07  | SW06  | 
//      | SW16 | SW11  | SW12  | SW13  | SW14  | SW15  |  | SW15  | SW14  | SW13  | SW12  | SW11  | SW16  |
//                             | SW17  | SW18  | SW19  |  | SW19  | SW18  | SW17  | 
        map = <
                RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)    RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
                RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)    RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
        RC(3,0) RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)    RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(3,9)
                                RC(3,2) RC(3,3) RC(3,4)    RC(3,5) RC(3,6) RC(3,7)         
        >;
    };
};

&default_layout {
    transform = <&default_transform>;        
};

// Input devices
/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        glidepoint_split_left: glidepoint_split_left@0 {
            compatible = "zmk,input-split";
            reg = <0>;
            status = "disabled";
        };

        glidepoint_split_right: glidepoint_split_right@1 {
            compatible = "zmk,input-split";
            reg = <1>; 
            status = "disabled";
        };
    };

    glidepoint_listener_left: glidepoint_listener_left {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&glidepoint_split_left>;
        scroller {
            layers = <0 1 2 3 4>;
            input-processors = <
                &zip_xy_to_scroll_mapper
                &zip_scroll_scaler 1 5
                &zip_scroll_transform INPUT_TRANSFORM_X_INVERT
            >;
        };
    };
    
    glidepoint_listener_right: glidepoint_listener_right {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&glidepoint_split_right>;
        movenent{
            layers = <0 1 2 3 4>;
            input-processors = <
                &zip_xy_scaler 100 50
            >;
        };
    };
};

